<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sprinkle.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.Sprinkle.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?colorOnPrimary</item>
    </style>

    <style name="Widget.Sprinkle.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="boxBackgroundColor">?colorPrimary</item>
    </style>

    <style name="Widget.Sprinkle.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.Sprinkle.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_button_background_tint</item>
        <item name="android:textColor">?textColorButtonPrimary</item>
    </style>

    <style name="Widget.Sprinkle.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primary_button_background_tint</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>


    <style name="Widget.Sprinkle.Button.Secondary">
        <item name="backgroundTint">@color/secondary_button_background_tint</item>
        <item name="android:textColor">?textColorButtonSecondary</item>
    </style>

    <style name="Widget.Sprinkle.Button.Error">
        <item name="backgroundTint">@color/error_button_background_tint</item>
        <item name="android:textColor">?colorOnError</item>
    </style>


    <style name="Widget.Sprinkle.TextView" parent="Widget.MaterialComponents.TextView" />

    <style name="Widget.Sprinkle.TextView.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Sprinkle.TextView.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Sprinkle.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?titleTextColor</item>
    </style>

    <style name="TextAppearance.Sprinkle.Settings.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?colorIconPrimary</item>
    </style>

    <style name="TextAppearance.Sprinkle.Settings.Value" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?secondaryTextColorOnSurface</item>
    </style>

    <style name="TextAppearance.Sprinkle.Headline2" parent="TextAppearance.MaterialComponents.Headline2" />

    <style name="TextAppearance.Sprinkle.Headline4" parent="TextAppearance.MaterialComponents.Headline4" />

    <style name="TextAppearance.Sprinkle.Headline4.Light" />

    <style name="TextAppearance.Sprinkle.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextAppearance.Sprinkle.Headline5" parent="TextAppearance.MaterialComponents.Headline5" />


    <style name="TextAppearance.Sprinkle.Body1" parent="TextAppearance.MaterialComponents.Body1" />


    <style name="TextAppearance.Sprinkle.Body2" parent="TextAppearance.MaterialComponents.Body2" />

</resources>