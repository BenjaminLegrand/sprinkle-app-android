<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="?colorPrimary">

    <ImageView
        android:id="@+id/view_plant_create_icon_list_item_image"
        android:layout_width="@dimen/plant_create_icon_list_item_size"
        android:layout_height="@dimen/plant_create_icon_list_item_size"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_marginBottom="@dimen/base_margin"
        android:background="@drawable/plant_create_icon_background"
        android:elevation="@dimen/plant_create_icon_elevation"
        android:padding="@dimen/plant_create_icon_list_item_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_plant_template_01" />

</androidx.constraintlayout.widget.ConstraintLayout>