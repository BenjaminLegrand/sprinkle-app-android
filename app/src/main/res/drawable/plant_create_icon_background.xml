<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/plant_create_icon_radius" />
            <solid android:color="@color/plant_create_icon_selected_background" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/plant_create_icon_radius" />
            <solid android:color="@color/plant_create_icon_unselected_background" />
        </shape>
    </item>
</selector>

